using System;

List<string>* splits = new List<string>*(4);

while (1)
{
    print(" > ");
    temp string line = readline();
    
    for (int i = 0; i < splits.length(); i++)
    {
        delete splits[i];
    }
    splits.clear();
    line.split(' ', splits);

    if (splits.length() < 3)
    {
        printline("Invalid input");
    }
    else
    {
        temp string a = splits[0];
        temp string _op = splits[1];
        temp string b = splits[2];

        if (_op.length() != 1)
        {
            printline("Invalid operator");
            printline(_op);            
        }
        else
        {
            int numa = parseint(a);
            int numb = parseint(b);
            char op = _op[0];

            if (op == '+')
            {
                printline(numa + numb);
            }
            else if (op == '-')
            {
                printline(numa - numb);
            }
            else if (op == '*')
            {
                printline(numa * numb);
            }
            else if (op == '/')
            {
                printline(numa / numb);
            }
            else
            {
                printline("Unknown operator");
                printline(op);
            }
        }
    }
}
